Subject: [PATCH 4/6] arm64: allwinner: sopine-baseboard: Expose MLX90614 temp

Signed-off-by: Alistair Francis <alistair@alistair23.me>
---
 .../boot/dts/allwinner/sun50i-a64-sopine-baseboard.dts      | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git a/arch/arm64/boot/dts/allwinner/sun50i-a64-sopine-baseboard.dts b/arch/arm64/boot/dts/allwinner/sun50i-a64-sopine-baseboard.dts
index 7907364edb73..105f8695a99d 100644
--- a/arch/arm64/boot/dts/allwinner/sun50i-a64-sopine-baseboard.dts
+++ b/arch/arm64/boot/dts/allwinner/sun50i-a64-sopine-baseboard.dts
@@ -212,6 +212,12 @@ lsm9ds1-magn@1e {
 		interrupt-parent = <&pio>;
 		interrupts = <2 7 IRQ_TYPE_EDGE_RISING>; /* PC7 */
         };
+
+	mlx90614@5a {
+		compatible = "melexis,mlx90614";
+		reg = <0x5a>;
+		wakeup-gpios = <&pio 7 3 GPIO_ACTIVE_HIGH>; /* PH3 */
+	};
 };
 
 &reg_ldo_io0 {
